<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:clipChildren="false">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:id="@+id/rl_bottom_bar_1"
            style="@style/style_bottom_bar_rl"
            >

            <ImageView
                android:id="@+id/iv_bottom_bar_1"
                style="@style/style_bottom_bar_iv"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv_bottom_bar_1"
                style="@style/style_bottom_bar_tv"
                android:layout_below="@+id/iv_bottom_bar_1"
                android:text="导航"/>

            <TextView
                android:id="@+id/tv_bottom_bar_num_1"
                android:layout_toRightOf="@+id/iv_bottom_bar_1"
                android:text="1"
                style="@style/style_tv_red_dot"
                android:visibility="gone"/>
            <View
                android:id="@+id/view_bottom_bar_dot_1"
                android:layout_toRightOf="@+id/iv_bottom_bar_1"
                style="@style/style_view_red_dot"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom_bar_2"
            style="@style/style_bottom_bar_rl">

            <ImageView
                android:id="@+id/iv_bottom_bar_2"
                style="@style/style_bottom_bar_iv"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv_bottom_bar_2"
                style="@style/style_bottom_bar_tv"
                android:layout_below="@+id/iv_bottom_bar_2"
                android:text="导航"/>

            <TextView
                android:id="@+id/tv_bottom_bar_num_2"
                android:layout_toRightOf="@+id/iv_bottom_bar_2"
                android:text="1"
                style="@style/style_tv_red_dot"
                android:visibility="gone"/>
            <View
                android:id="@+id/view_bottom_bar_dot_2"
                android:layout_toRightOf="@+id/iv_bottom_bar_2"
                style="@style/style_view_red_dot"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom_bar_3"
            style="@style/style_bottom_bar_rl"
            android:layout_height="80dp"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/iv_bottom_bar_3"
                style="@style/style_bottom_bar_iv"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv_bottom_bar_3"
                style="@style/style_bottom_bar_tv"
                android:layout_below="@+id/iv_bottom_bar_3"
                android:text="导航"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom_bar_4"
            style="@style/style_bottom_bar_rl">

            <ImageView
                android:id="@+id/iv_bottom_bar_4"
                style="@style/style_bottom_bar_iv"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv_bottom_bar_4"
                style="@style/style_bottom_bar_tv"
                android:layout_below="@+id/iv_bottom_bar_4"
                android:text="导航"/>

            <TextView
                android:id="@+id/tv_bottom_bar_num_4"
                android:layout_toRightOf="@+id/iv_bottom_bar_4"
                android:text="1"
                style="@style/style_tv_red_dot"
                android:layout_toEndOf="@+id/iv_bottom_bar_4"/>
            <View
                android:id="@+id/view_bottom_bar_dot_4"
                android:layout_toRightOf="@+id/iv_bottom_bar_4"
                style="@style/style_view_red_dot"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom_bar_5"
            style="@style/style_bottom_bar_rl">

            <ImageView
                android:id="@+id/iv_bottom_bar_5"
                style="@style/style_bottom_bar_iv"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv_bottom_bar_5"
                style="@style/style_bottom_bar_tv"
                android:layout_below="@+id/iv_bottom_bar_5"
                android:text="导航"/>

            <TextView
                android:id="@+id/tv_bottom_bar_num_5"
                android:layout_toRightOf="@+id/iv_bottom_bar_5"
                android:text="1"
                style="@style/style_tv_red_dot"
                android:visibility="gone"/>

            <View
                android:id="@+id/view_bottom_bar_dot_5"
                android:layout_toRightOf="@+id/iv_bottom_bar_5"
                style="@style/style_view_red_dot"/>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>